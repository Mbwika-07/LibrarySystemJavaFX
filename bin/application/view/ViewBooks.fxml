<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.controller.ViewBooksController">
    <VBox alignment="CENTER" spacing="10.0">
        <TableView fx:id="bookTable">
            <columns>
                <TableColumn fx:id="bookIdColumn" text="Book ID"/>
                <TableColumn fx:id="titleColumn" text="Title"/>
                <TableColumn fx:id="authorColumn" text="Author"/>
                <TableColumn fx:id="genreColumn" text="Genre"/>
                <TableColumn fx:id="isbnColumn" text="ISBN"/>
            </columns>
        </TableView>
        <Button text="Back to Main" onAction="#handleBackToMain"/>
    </VBox>
</AnchorPane>

