<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.controller.CheckedOutBookController">
    <VBox alignment="CENTER" spacing="10.0">
        <TextField fx:id="bookIdField" promptText="Book ID"/>
        <TextField fx:id="userIdField" promptText="User ID"/>
        <TextField fx:id="dueDateField" promptText="Due Date (YYYY-MM-DD)"/>
        <Button text="Check Out Book" onAction="#handleCheckOutBook"/>
        <Button text="Return Book" onAction="#handleReturnBook"/>
        <TableView fx:id="checkedOutBookTable">
            <columns>
                <TableColumn fx:id="bookIdColumn" text="Book ID"/>
                <TableColumn fx:id="userIdColumn" text="User ID"/>
                <TableColumn fx:id="dueDateColumn" text="Due Date"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>


