<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="application.controller.MainController"
      spacing="10" alignment="center" style="-fx-background-color: blue;" fillWidth="true">

    <!-- Empty space to push buttons to the bottom -->
    <VBox VBox.vgrow="ALWAYS"/>

    <!-- Button section at the bottom -->
    <HBox spacing="10" alignment="center" style="-fx-background-color: blue; -fx-padding: 10;">
        <Button text="View Users" onAction="#handleViewUsers"/>
        <Button text="Add Users" onAction="#handleAddUsers"/>
        <Button text="Remove Users" onAction="#handleRemoveUsers"/>
        <Button text="View Books" onAction="#handleViewBooks"/>
        <Button text="Add Books" onAction="#handleAddBooks"/>
        <Button text="Remove Books" onAction="#handleRemoveBooks"/>
        <Button text="Checkout Books" onAction="#handleCheckoutBooks"/>
        <Button text="Return Books" onAction="#handleReturnBooks"/>
    </HBox>
</VBox>
