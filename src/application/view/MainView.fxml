<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.MainController">
    <children>
        <TableView fx:id="bookTable" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="titleColumn" text="Title"/>
                <TableColumn fx:id="authorColumn" text="Author"/>
                <TableColumn fx:id="genreColumn" text="Genre"/>
                <TableColumn fx:id="isbnColumn" text="ISBN"/>
            </columns>
        </TableView>
        <Button layoutX="14.0" layoutY="220.0" text="Add Book" onAction="#handleAddBook"/>
        <Button layoutX="100.0" layoutY="220.0" text="Remove Book" onAction="#handleRemoveBook"/>
        <Button layoutX="200.0" layoutY="220.0" text="Check Out Book" onAction="#handleCheckOutBook"/>
        <Button layoutX="320.0" layoutY="220.0" text="Return Book" onAction="#handleReturnBook"/>
        <Button layoutX="450.0" layoutY="220.0" text="Add User" onAction="#handleAddUser"/>
        <Button layoutX="550.0" layoutY="220.0" text="Remove User" onAction="#handleRemoveUser"/>
        <!-- Additional components for Authors, Genres, and Checked Out Books can be added similarly -->
    </children>
</AnchorPane>

