<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.controller.RemoveBooksController">
    <VBox alignment="CENTER" spacing="10.0">
        <TextField fx:id="titleField" promptText="Title"/>
        <TextField fx:id="authorField" promptText="Author"/>
        <TextField fx:id="isbnField" promptText="ISBN"/>
        <Button text="Remove Book" onAction="#handleRemoveBook"/>
        <Button text="Back to Main" onAction="#handleBackToMain"/>
    </VBox>
</AnchorPane>
